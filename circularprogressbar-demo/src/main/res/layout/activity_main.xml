<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/default_padding"
    >

  <com.hrules.circularprogressbar.CircularProgressBar
      android:id="@+id/circularProgressBar"
      android:layout_width="100dp"
      android:layout_height="100dp"
      android:layout_gravity="center_horizontal"
      />

  <Button
      android:id="@+id/buttonGo"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center_horizontal"
      android:text="@string/buttonGo"
      android:layout_marginTop="@dimen/default_margin"
      />

  <Button
      android:id="@+id/buttonGoNoAnim"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center_horizontal"
      android:text="@string/buttonGoNoAnim"
      android:layout_marginTop="@dimen/default_margin"
      />

  <Button
      android:id="@+id/buttonReset"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center_horizontal"
      android:text="@string/buttonReset"
      android:layout_marginTop="@dimen/default_margin"
      />

  <Button
      android:id="@+id/buttonResetNoAnim"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center_horizontal"
      android:text="@string/buttonResetNoAnim"
      android:layout_marginTop="@dimen/default_margin"
      />

  <Button
      android:id="@+id/buttonCountdown"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center_horizontal"
      android:text="@string/buttonCountdown"
      android:layout_marginTop="@dimen/default_margin"
      />

</LinearLayout>
